{
	"extends": "./.svelte-kit/tsconfig.json",
	"compilerOptions": {
		"strict": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"forceConsistentCasingInFileNames": true,
		"moduleResolution": "bundler",
		"target": "ES2022",
		"lib": ["ES2022", "DOM", "DOM.Iterable", "WebWorker"],
		"allowJs": true,
		"checkJs": true,
		"skipLibCheck": true
	},
	"include": ["src/**/*.ts", "src/**/*.svelte", "src/**/*.d.ts"],
	"exclude": [
		"node_modules",
		".svelte-kit",
		"build",
		"dist",
		"eslint.config.js",
		"postcss.config.js",
		"svelte.config.js",
		"tailwind.config.js",
		"vite.config.ts",
		"vitest.config.ts",
		"playwright.config.ts"
	]
}
